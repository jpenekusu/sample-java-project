<project>
  <modelVersion>4.0.0</modelVersion>
  <groupId>com.alcacent</groupId>
  <artifactId>testartefactid</artifactId>
  <version>1.0.0-SNAPSHOT</version>
  <packaging>jar</packaging>

  <name>ant.project.name</name>
  <description>description</description>

  <scm>
    <connection>
      scm:git:https://github.com/jpenekusu/sample-java-project.git
    </connection>
    <url>https://github.com/jpenekusu/sample-java-project.git</url>
  </scm>

  <developers>
    <developer>
      <name>Christopher Wellons</name>
      <email>mosquitopsu@gmail.com</email>
      <url>http://nullprogram.com</url>
      <timezone>-5</timezone>
    </developer>
  </developers>
    <dependencies>
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <version>4.12</version>
